<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_container"
    card_view:cardCornerRadius="@dimen/borde_card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_height_img"
            android:src="@drawable/img_container_pets"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnHuesoLike"
                android:layout_width="@dimen/img_button_like"
                android:layout_height="@dimen/img_button_like"
                android:background="@android:color/transparent"
                android:cropToPadding="false"
                android:src="@drawable/hueso_0"/>


            <LinearLayout
                android:layout_width="@dimen/ll_tvname_pet"
                android:layout_height="wrap_content"
                android:gravity=""
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNamePet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgTotalLikes"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="@string/pet_name"
                    android:textSize="@dimen/size_name"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTotalLikes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/text_total_likes"
                    android:textSize="@dimen/size_name" />

                <ImageView
                    android:id="@+id/imgTotalLikes"
                    android:layout_width="@dimen/img_button_like"
                    android:layout_height="@dimen/img_button_like"
                    android:src="@drawable/hueso_1" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>