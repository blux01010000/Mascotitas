<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_container"
    card_view:cardCornerRadius="@dimen/borde_card_view">


    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgvProfile"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_container_pets"
            />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="3dp">


            <TextView
                android:id="@+id/tvTotalLikesProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_total_likes"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imgvTotalLikesProfile"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/hueso_1" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>